<h1>New Student</h1>
<!-- Modal Structure -->
<div id="studentModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="studentModalLabel">Create/Update Student</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Form for creating/updating a student -->
        <%= form_with(model: @student, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :subject %>
            <%= form.text_field :age, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :marks %>
            <%= form.number_field :email, class: 'form-control' %>
          </div>
          
          <div class="modal-footer">
            <%= form.submit @student.new_record? ? 'Create Student' : 'Update Student', class: 'btn btn-primary' %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', students_path %>
